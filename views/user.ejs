<%- layout('layout/boilerplate') %> 
<div style="display:flex">
     <div class="offset-1 col-2 mt-3"">
        <img src="/user-logo.png" class="card-img-top" style="height: 150px;" alt="...">
     </div>
     <div class="offset-1 col-5 mt-3" style="background-color:#D5D5D5;padding: 10px;">
        <h5><b>USER INFORMATION</b></h5>
        <div class="mt-3">
            <a class="btn btn-sm" aria-disabled="true" style="background-color: rgb(0, 0, 0);color:white;pointer-events: none;margin-bottom: 3px;">Username</a>
            <a class="btn btn-sm" aria-disabled="true" style="outline:1px solid white;outline-offset:-2px;background-color: rgb(175, 253, 18);pointer-events: none;margin-bottom: 3px;">@<%= currentUser.username %></a>
        </div>
        <div class="mt-3">
        <a class="btn btn-sm" aria-disabled="true" style="background-color: rgb(0, 0, 0);color:white;pointer-events: none;margin-bottom: 3px;">Email</a>
        <a class="btn btn-sm" aria-disabled="true" style="outline:1px solid white;outline-offset:-2px;background-color: rgb(175, 253, 18);pointer-events: none;margin-bottom: 3px;"><%= currentUser.email %></a>
        </div>
        <div class="mt-3">
        <a class="btn btn-sm" aria-disabled="true" style="background-color: rgb(0, 0, 0);color:white;pointer-events: none;margin-bottom: 3px;">Products Bought</a>
        <a class="btn btn-sm" aria-disabled="true" style="outline:1px solid white;outline-offset:-2px;background-color: rgb(175, 253, 18);pointer-events: none;margin-bottom: 3px;"><%= n_bought_books %></a>
        </div>
        <div class="mt-3">
        <a class="btn btn-sm" aria-disabled="true" style="background-color: rgb(0, 0, 0);color:white;pointer-events: none;margin-bottom: 3px;">Products Created</a>
        <a class="btn btn-sm" aria-disabled="true" style="outline:1px solid white;outline-offset:-2px;background-color: rgb(175, 253, 18);pointer-events: none;margin-bottom: 3px;"><%= n_created_books %></a>
        </div>
        <div class="mt-3">
        <a class="btn btn-sm" aria-disabled="true" style="background-color: rgb(0, 0, 0);color:white;pointer-events: none;margin-bottom: 3px;">Products Sold</a>
        <a class="btn btn-sm" aria-disabled="true" style="outline:1px solid white;outline-offset:-2px;background-color: rgb(175, 253, 18);pointer-events: none;margin-bottom: 3px;"><%= n_sold_book %></a>
        </div>
        <div class="mt-3">
        <a class="btn btn-sm" aria-disabled="true" style="background-color: rgb(0, 0, 0);color:white;pointer-events: none;margin-bottom: 3px;">E-Wallet</a>
        <a class="btn btn-sm" aria-disabled="true" style="outline:1px solid white;outline-offset:-2px;background-color: rgb(175, 253, 18);pointer-events: none;margin-bottom: 3px;"><i class="fa fa-rupee"></i><%= wallet %></a>
        </div>
     </div>
</div>
